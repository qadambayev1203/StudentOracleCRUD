@model SudentCRUDOracleDB.Models.Student

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style=" margin-top: 0.32rem; font-size: 2rem; font-weight: 700; text-transform: capitalize; color: #05364d; ">Delete</h2>
<div class="card" style="width: 18rem;">
    <div class="card-body">
        <h1 class="card-title text-center" style=" margin-top: 0.32rem; font-size: 2.52rem; font-weight: 700; text-transform: capitalize; color: #05364d; ">Student</h1>
        <hr />
        <p style="font-size:20px"><b>Id:</b>  @Model.id</p>
        <p style="font-size:20px"><b>Name:</b>  @Model.Name</p>
        <p style="font-size:20px"><b>SName:</b>  @Model.Sname</p>
        <p style="font-size:20px"><b>Email:</b>  @Model.Email</p>
        <form asp-controller="Home" asp-action="Delete" method="post">
            <input type="hidden" name="modelId" value="@Model.id" />
            <button type="submit" class="btn btn-danger" style="width:100px">Delete</button>
            <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Back to List</a>
        </form>

    </div>
</div>

