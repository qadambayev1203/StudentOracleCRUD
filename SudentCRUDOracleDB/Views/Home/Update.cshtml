@model SudentCRUDOracleDB.Models.Student

@{
    ViewBag.Title = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style=" margin-top: 0.32rem; font-size: 2rem; font-weight: 700; text-transform: capitalize; color: #05364d; ">Update</h2>

<form asp-controller="Home" asp-action="Update" method="post" class="mt-3">

    <div class="form-group">
        <label asp-for="@Model.Name" class="form-label"></label>
        <input asp-for="@Model.Name" value="@Model.Name" type="text" class="form-control mb-3" />

        <label asp-for="@Model.Sname" class="form-label"></label>
        <input asp-for="@Model.Sname" value="@Model.Sname" type="text" class="form-control mb-3" />

        <label asp-for="@Model.Email" class="form-label"></label>
        <input asp-for="@Model.Email" value="@Model.Email" type="email" class="form-control mb-3" />
    </div>

    <div class="mt-4">
        <button type="submit" class="btn btn-warning">Update</button>
        <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Back to List</a>
    </div>

</form>


